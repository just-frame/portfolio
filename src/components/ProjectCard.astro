---
interface Props {
  name: string;
  description: string;
  repo?: string;
  demo?: string;
  index: number;
}

const { name, description, repo, demo, index } = Astro.props;
---

<article
  class="group relative p-6 rounded-lg border transition-all duration-300 hover-lift animate-fade-in opacity-0"
  style={`
    border-color: var(--color-border);
    background-color: var(--color-bg-alt);
    animation-delay: ${0.1 + index * 0.15}s;
  `}
>
  <!-- Glow effect on hover -->
  <div
    class="absolute inset-0 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10"
    style="background: radial-gradient(circle at 50% 50%, var(--color-accent-glow) 0%, transparent 70%);"
  ></div>

  <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
    <div class="flex-1">
      <!-- Project name -->
      <h3 class="text-lg font-medium flex items-center gap-2" style="color: var(--color-text);">
        <span class="text-xs font-mono" style="color: var(--color-accent-secondary);">$</span>
        {name}
      </h3>

      <!-- Description -->
      <p class="mt-2 text-sm leading-relaxed" style="color: var(--color-text-muted);">
        {description}
      </p>
    </div>

    <!-- Links -->
    {(repo || demo) && (
      <div class="flex items-center gap-3 text-sm">
        {repo && (
          <a
            href={repo}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 px-3 py-1.5 rounded border transition-all duration-200"
            style="border-color: var(--color-border); color: var(--color-text-muted);"
          >
            <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span>repo</span>
          </a>
        )}
        {demo && (
          <a
            href={demo}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 px-3 py-1.5 rounded border transition-all duration-200"
            style="border-color: var(--color-accent); color: var(--color-accent);"
          >
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"/>
            </svg>
            <span>demo</span>
          </a>
        )}
      </div>
    )}
  </div>
</article>

<style>
  article:hover {
    border-color: var(--color-accent);
  }

  a:hover {
    background-color: var(--color-bg-elevated);
    color: var(--color-accent);
  }
</style>
