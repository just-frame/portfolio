---
interface Props {
  id: string;
  title?: string;
  accent?: 'security' | 'projects';
}

const { id, title, accent } = Astro.props;

const accentColors = {
  security: 'var(--color-accent)',
  projects: 'var(--color-accent-secondary)',
};

const accentColor = accent ? accentColors[accent] : 'var(--color-accent)';
---

<section id={id} class="py-16 md:py-24">
  {title && (
    <div class="flex items-center gap-4 mb-10">
      <span class="text-xs font-mono tracking-widest uppercase" style={`color: ${accentColor};`}>
        //
      </span>
      <h2 class="text-2xl md:text-3xl font-semibold" style="color: var(--color-text);">
        {title}
      </h2>
      <div class="flex-1 h-px" style={`background: linear-gradient(90deg, ${accentColor}33 0%, transparent 100%);`}></div>
    </div>
  )}
  <slot />
</section>

<style>
  section {
    position: relative;
  }
</style>
