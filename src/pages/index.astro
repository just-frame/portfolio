---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import ProjectCard from '../components/ProjectCard.astro';
import SecurityItem from '../components/SecurityItem.astro';
import { projects } from '../data/projects';
import { securityWork } from '../data/security-work';
---

<BaseLayout
  title="justframe"
  description="Security engineer. Offensive researcher. Breaking fintech, AI, and DeFi systems."
>
  <!-- Hero Section -->
  <section class="pt-16 pb-24 md:pt-24 md:pb-32 relative">
    <!-- Status indicator -->
    <div class="flex items-center gap-2 mb-8 text-sm animate-fade-in opacity-0" style="animation-delay: 0.1s;">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full opacity-75" style="background-color: var(--color-accent-secondary);"></span>
        <span class="relative inline-flex rounded-full h-2 w-2" style="background-color: var(--color-accent-secondary);"></span>
      </span>
      <span style="color: var(--color-text-dim);">available for security research</span>
    </div>

    <!-- Main heading -->
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-semibold tracking-tight animate-fade-in opacity-0"
        style="animation-delay: 0.2s; color: var(--color-text);">
      justframe<span class="animate-blink" style="color: var(--color-accent);">_</span>
    </h1>

    <!-- Role description -->
    <p class="mt-6 text-lg md:text-xl max-w-lg animate-fade-in opacity-0"
       style="animation-delay: 0.3s; color: var(--color-text-muted);">
      Security engineer. Offensive researcher.<br />
      <span class="text-gradient">Breaking fintech, AI, and DeFi systems.</span>
    </p>

    <!-- Quick links -->
    <div class="mt-10 flex flex-wrap gap-4 text-sm animate-fade-in opacity-0" style="animation-delay: 0.4s;">
      <a href="https://github.com/just-frame"
         target="_blank"
         rel="noopener noreferrer"
         class="group flex items-center gap-2 px-4 py-2 rounded border transition-all duration-200"
         style="border-color: var(--color-border); background-color: var(--color-bg-alt);">
        <svg class="w-4 h-4" style="color: var(--color-text-muted);" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span style="color: var(--color-text-muted);" class="group-hover:text-[var(--color-accent)] transition-colors">github</span>
      </a>
    </div>

    <!-- Decorative element -->
    <div class="absolute right-0 top-1/2 -translate-y-1/2 hidden lg:block opacity-10"
         style="color: var(--color-accent);" aria-hidden="true">
      <pre class="text-xs leading-tight font-mono select-none">
  ╭──────────────╮
  │  ░░░░░░░░░░  │
  │  ▓▓▓▓▓▓▓▓▓▓  │
  │  ████████████│
  │  ▓▓▓▓▓▓▓▓▓▓  │
  │  ░░░░░░░░░░  │
  ╰──────────────╯
      </pre>
    </div>
  </section>

  <!-- Divider -->
  <div class="section-divider"></div>

  <!-- Security Section -->
  <Section id="security" title="What I Do" accent="security">
    <div class="grid gap-4 md:gap-6">
      {securityWork.map((item, index) => (
        <SecurityItem text={item.text} index={index} />
      ))}
    </div>
  </Section>

  <!-- Divider -->
  <div class="section-divider"></div>

  <!-- Projects Section -->
  <Section id="projects" title="Projects" accent="projects">
    <div class="grid gap-6 md:gap-8">
      {projects.map((project, index) => (
        <ProjectCard
          name={project.name}
          description={project.description}
          repo={project.repo}
          demo={project.demo}
          index={index}
        />
      ))}
    </div>
  </Section>
</BaseLayout>
