---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout
  title={`${post.data.title} â€” justframe`}
  description={post.data.description}
>
  <article class="pt-16 pb-24 md:pt-24 md:pb-32">
    <!-- Back link -->
    <a
      href="/blog"
      class="inline-flex items-center gap-2 text-sm font-mono mb-10 transition-colors duration-200"
      style="color: var(--color-text-dim);"
    >
      <span style="color: var(--color-accent);">&lt;-</span> back to blog
    </a>

    <!-- Post header -->
    <header class="mb-12">
      <time
        class="text-xs font-mono tracking-wide uppercase"
        style="color: var(--color-text-dim);"
        datetime={post.data.date.toISOString()}
      >
        {post.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </time>

      <h1
        class="mt-4 text-3xl md:text-4xl lg:text-5xl font-semibold tracking-tight"
        style="color: var(--color-text);"
      >
        {post.data.title}
      </h1>

      <p class="mt-4 text-lg" style="color: var(--color-text-muted);">
        {post.data.description}
      </p>

      {post.data.tags && (
        <div class="mt-6 flex flex-wrap gap-2">
          {post.data.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <!-- Divider -->
    <div class="section-divider mb-12"></div>

    <!-- Post content -->
    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  /* Markdown prose styling */
  .prose {
    max-width: 72ch;
    line-height: 1.8;
    color: var(--color-text-muted);
  }

  .prose :global(h2) {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin-top: 3rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .prose :global(h3) {
    font-family: var(--font-mono);
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-text);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(p) {
    margin-bottom: 1.25rem;
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-color: var(--color-accent-glow);
  }

  .prose :global(a:hover) {
    text-decoration-color: var(--color-accent);
  }

  .prose :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
    padding: 0.15em 0.4em;
    border-radius: 2px;
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    color: var(--color-accent);
  }

  .prose :global(pre) {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.7;
    padding: 1.25rem 1.5rem;
    margin: 1.5rem 0;
    border-radius: 2px;
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    overflow-x: auto;
  }

  .prose :global(pre code) {
    padding: 0;
    border: none;
    background: none;
    color: var(--color-text-muted);
  }

  .prose :global(blockquote) {
    border-left: 2px solid var(--color-accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-dim);
    font-style: italic;
  }

  .prose :global(ul),
  .prose :global(ol) {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(ul li::marker) {
    color: var(--color-accent);
  }

  .prose :global(ol li::marker) {
    color: var(--color-accent);
    font-family: var(--font-mono);
  }

  .prose :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, var(--color-border) 20%, var(--color-border) 80%, transparent 100%);
    margin: 2.5rem 0;
  }

  /* Images - screenshots, diagrams */
  .prose :global(img) {
    max-width: 100%;
    border-radius: 2px;
    border: 1px solid var(--color-border);
    margin: 1.5rem 0;
  }

  .prose :global(img:hover) {
    border-color: var(--color-accent);
  }

  /* Tables */
  .prose :global(table) {
    width: 100%;
    font-size: 0.875rem;
    margin: 1.5rem 0;
    border-collapse: collapse;
  }

  .prose :global(th) {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-dim);
    text-align: left;
    padding: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  .prose :global(td) {
    padding: 0.75rem;
    border-bottom: 1px solid var(--color-border-subtle);
    color: var(--color-text-muted);
  }

  .prose :global(tr:hover td) {
    background-color: var(--color-bg-alt);
  }
</style>
